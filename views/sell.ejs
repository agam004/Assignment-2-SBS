<%- include('header') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Sell Item: <%= item.name %></h2>
  <div class="card p-4 shadow-sm">
    <p>Available Stock: <strong><%= item.quantity %></strong></p>
    <p>Price Per Item: <strong>$<%= item.price.toFixed(2) %></strong></p>
    <form action="/sales/sell/<%= item.id %>" method="POST">
      <div class="mb-3">
        <label class="form-label">Quantity to Sell</label>
        <input type="number" name="quantity" class="form-control" placeholder="Enter quantity" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Confirm Sale</button>
    </form>
  </div>
</div>

<%- include('footer') %>
