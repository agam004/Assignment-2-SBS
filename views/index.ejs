<%- include('header') %>

<h1 class="text-center">Inventory List</h1>


<div class="container">
  <div class="d-flex justify-content-between mb-3">
    <h4>Items</h4>
    <div>
      <a href="/sales" class="btn btn-primary me-2">View Sales</a>
      <a href="/add" class="btn btn-success">+ Add Item</a>
      <a href="/ledger" class="btn btn-secondary">Stock Ledger</a>
    </div>
  </div>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.price.toFixed(2) %></td>
        <td>
          <a href="/sales/sell/<%= item.id %>" class="btn btn-success btn-sm me-4">Sell</a>
          <a href="/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
          <form action="/delete/<%= item.id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('footer') %>